{
	"name" : "alsar/specification",
        "description": "Specification pattern implemented in PHP.",
	"type" : "library",
	"license" : "MIT",
	"require" : {
		"php" : ">=7.0"
	},
	"require-dev" : {
		"phpunit/phpunit": "^5.7",
		"friendsofphp/php-cs-fixer": "^2.0"
	},
	"autoload" : {
		"psr-4" : {
			"Alsar\\Specification\\" : "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Alsar\\Specification\\": "tests/"
		}
	},
	"config" : {
		"bin-dir" : "bin"
	},
	"keywords" : [
		"specification pattern",
		"specification"
	],
	"scripts": {
		"test": "bin/phpunit",
		"fix-cs": "bin/php-cs-fixer fix"
	}
}
